<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/customer_list"
        android:textStyle="bold"
        android:textColor="#ff69b4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="Item Name"
        android:inputType="textPersonName"
         />


    <TextView
        android:id="@+id/catergory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_list"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="Category"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/catergory_name_cust"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_list"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="-1dp"
        android:ems="10"
        android:hint="Category"
        android:textColor="#0f52ba"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-1dp"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/catergory"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="Quantity"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/quantity_value_cust"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/catergory_name_cust"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/price_value_cust"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_value_cust"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:text="Price"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp" />

</RelativeLayout>